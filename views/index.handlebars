<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <div class="row">
      <div class="mx-auto">
        <h1 class="display-4">Burgers!</h1>
        <p>Add your favorite burgers and devour them!</p>
      </div>
    </div>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-6 burgerForm">
      <h2>Burgers that are available!</h2>

      <ul>
        {{#each burgers}} {{#unless devoured}}
        <p>{{burger_name}}<span><button class="devourBtn" value="{{id}}">Devour!</button></span></p>
        {{/unless}} {{/each}}
      </ul>
    </div>

    <div class="col-md-6 burgerForm">
      <h2>Burgers that are devoured!</h2>

      <ul>
        {{#each burgers}} {{#if devoured}}
        <p>{{burger_name}}</p>
        {{/if}} {{/each}}
      </ul>
    </div>
  </div>


</div>

<div class="burgerForm">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <label for="burgerName validationDefault01">Burger Name:</label>
    <input type="text" id="burgerName validationDefault01" name="name" required/>

    <button type="submit" id="burgerBtn">Add Burger</button>
  </form>
</div>


<script type="text/javascript">

  $("#burgerBtn").on("click", function (event) {

    event.preventDefault();

      var newBurger = {
        burger_name: $("#burgerName").val(),
        devoured: false
      };

      $.post("/api/burgers", newBurger)

        .then(function (data) {

          location.reload();

        });

  });

  $(".devourBtn").on("click", function (event) {
    event.preventDefault();

    var devourBurger = $(this).val();

    var newDevour = {
      devoured: true
    };

    $.ajax("/api/burgers/" + devourBurger, {
      type: "PUT",
      data: newDevour
    })

      .then(function () {
        console.log("Updated burger");

        location.reload();
      })
  });


</script>